<?xml version="1.0" encoding="iso-8859-1"?>
<project>
    
    <!-- Task: Replace "@VERSION@"  with "" -->
    <target name="-js.remove.version" if="js.files">
        <replaceregexp flags="gs">
            <fileset 
                dir="${dir.app.files}" 
                includes="${filter.js}"
                excludes="${filter.js.exclude}"
            />
            <regexp pattern="@VERSION@" />
            <substitution expression="" />
        </replaceregexp>
    </target>

    <!-- Task: comment out logging statements -->
    <target name="-js.hide.console" if="js.files">
        <replaceregexp flags="mg" >
            <regexp pattern='^(.*?(?:Y.log|console.log|YAHOO.log).*?(?:;|\).*;|(?:\r?\n.*?)*?\).*;).*;?.*?\r?\n)' />
            <fileset 
                dir="${dir.app.temp}" 
                includes="${filter.js},${filter.markup}"
                excludes="${filter.js.exclude}"
            />
            <substitution expression='\/\*\0\*\/' />
        </replaceregexp>
    </target>

    <!-- Task: Compress JS using YUI Compressor -->
    <target name="-js.compress" if="js.files">
        <yuicompressor>
            <fileset 
                dir="${dir.app.files}" 
                includes="${filter.js}" 
                excludes="${filter.js.exclude}"
            />
        </yuicompressor>
    </target>
    
    <!-- Take <script src="fooga.js"></script> tags & inject the JS inline -->
    <target name="-js.inline" if="js.files" unless="js.noinline">
        <script 
            language="javascript" 
            src="${dir.build.js}/js-script-inliner.js" 
            classpathref="script.classpath"
        />
    </target>
    
    <!-- Task: kick off all other js tasks -->
    <target name="-js" depends="-js.remove.version, -js.hide.console, -js.compress, -js.inline" />
</project>